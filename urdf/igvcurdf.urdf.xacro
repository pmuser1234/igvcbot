<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="diffbot">
<!--colours-->
<material name="red">
 <color rgba="1 0 0 1"/>
</material>
<material name="green">
    <color rgba="0 1 0 1"/>
</material>
<material name="black">
    <color rgba="0 0 0 1"/>
</material>
<!-- chassis-->
<link name="base_link">
</link>
<joint name="chassis_joint" type="fixed">
<parent link="base_link"/>
<child link="chassis"/>
<origin xyz="-0.1 0 0"/>
</joint>
<link name="chassis">
    <visual>
        <origin xyz="0.15 0 0.075"/>
        <geometry>
            <box size="0.3 0.3 0.15"/>
        </geometry>
        <material name="red"/>
    </visual>
    <collision>
        <origin xyz="0.15 0 0.075"/>
        <geometry>
            <box size="0.3 0.3 0.15"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.5"/>
    </inertial>
</link>
<!-- wheels-->
<joint name="left_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0.05 0.175 0" rpy="-${pi/2} 0 0"/>
    <axis  xyz="0 0 1"/>
</joint>
<link name="left_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.06" length="0.05"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.06" length="0.05"/>
        </geometry>
    </collision>
   <inertial>
        <mass value="0.05"/>
    </inertial>
</link>
<joint name="right_wheel_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0.05 -0.175 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
</joint>
<link name="right_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.06" length="0.05"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.06" length="0.05"/>
        </geometry>
    </collision>
   <inertial>
        <mass value="0.05"/>
    </inertial>
</link>
<!--caster wheel-->
<joint name="caster_joint" type="fixed">
    <parent link="chassis"/>
    <child link="caster"/>
    <origin xyz="0.2 0 0"/>
</joint>
<link name="caster">
    <visual>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.02"/>
    </inertial>
</link>
</robot>